{
    "version": 1,
    "disable_existing_loggers": true,
    "formatters": {
        "stream": {
            "level": "INFO",
            "format": "%(asctime)s - %(name)s - %(levelname)s :: %(message)s"
        },
        "file": {
            "level": "DEBUG",
            "format": "%(asctime)s - %(name)s - %(levelname)s @ %(funcName)s:%(lineno)d :: %(message)s\n"
        }
    },
    "handlers": {
        "streamhandler": {
            "class": "logging.StreamHandler",
            "level": "INFO",
            "formatter": "stream",
            "stream": "ext://sys.stdout"
        },
        "main": {
            "class": "logging.handlers.TimedRotatingFileHandler",
            "filename": "logs/main.log",
            "formatter": "file",
            "level": "DEBUG",
            "when":"midnight",
            "backupCount":3
        },
        "matcher": {
            "class": "logging.handlers.TimedRotatingFileHandler",
            "filename": "logs/matcher.log",
            "formatter": "file",
            "level": "DEBUG",
            "when":"midnight",
            "backupCount":3
        },
        "matching_process": {
            "class": "logging.handlers.TimedRotatingFileHandler",
            "filename": "logs/matching_process.log",
            "formatter": "file",
            "level": "DEBUG",
            "when":"midnight",
            "backupCount":3
        },
        "MatcherClass": {
            "class": "logging.handlers.TimedRotatingFileHandler",
            "filename": "logs/matcher_class.log",
            "formatter": "file",
            "level": "DEBUG",
            "when":"midnight",
            "backupCount":3
        }
    },
    "loggers": {
        "main": {
            "level": "DEBUG",
            "handlers": [
                "streamhandler",
                "main"
            ],
            "propagate": 0
        },
        "matcher": {
            "level": "DEBUG",
            "handlers": [
                "streamhandler",
                "matcher"
            ],
            "propagate": 0
        },
        "matching_process": {
            "level": "DEBUG",
            "handlers": [
                "streamhandler",
                "matching_process"
            ],
            "propagate": 0
        },
        "MatcherClass": {
            "level": "DEBUG",
            "handlers": [
                "streamhandler",
                "MatcherClass"
            ],
            "propagate": 0
        }
    }
}